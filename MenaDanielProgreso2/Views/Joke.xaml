<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenaDanielProgreso2.Views.Joke"
             Title="Joke">
    <AbsoluteLayout>
        <ScrollView AbsoluteLayout.LayoutBounds="0.5,0.5,0.5,0.5"
                    AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout Padding="5" Spacing="15">
                <Label x:Name="SetupLabel"
                       FontSize="40"/>
                <Label x:Name="PunchlineLabel"
                       FontSize="40"/>
            </VerticalStackLayout>
        </ScrollView>
        <Button Text="Otro Chiste"
                Clicked="Button_Clicked"
                AbsoluteLayout.LayoutBounds="0.5,1"/>
    </AbsoluteLayout>
</ContentPage>